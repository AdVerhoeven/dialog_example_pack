# generate a dialog that allows selection of a single ID from a list/array called players

# Expected input should be { players:[ {display:<text_component>,id:<int>}, ] }
$dialog show @s {type:"minecraft:confirmation",title:{translate:"essentials.player_selection.dialog.title",fallback:"Select a player"},pause:false,inputs:[{type:"minecraft:single_option",key:"id",label:{translate:"essentials.player_selection.dialog.singleoption.label",fallback:"Target Player"},options:$(players)}],yes:{label:{translate:"essentials.player_selection.dialog.confirm",fallback:"Confirm"},action:{type:"minecraft:dynamic/run_command",template:"trigger selected_player set \u0024(id)"}},no:{label:{translate:"gui.cancel"}}}